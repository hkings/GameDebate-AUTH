<!DOCTYPE html>
<html>
<head>
  <title>GameOpinion</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="ui secondary pointing menu">

		<%= link_to "Home", root_path, class: "item active", id: "home" %>
		<%= link_to "Hot Topics", hot_path, class: "item", id: "hot" %>
		<%= link_to "Newest", newest_path, class: "item", id: "newest" %>

		<div class="right menu">
			<% if current_user %>
				<%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "ui item" %>
			<% else %>
				<%= link_to "Sign In", new_user_session_path, class: "ui item", id: "sign-in" %>
			<% end %>
			<% if !current_user %>
				<%= link_to "Sign Up", new_user_registration_path, class: "ui item", id: "sign-up" %>
			<% end %>
		</div>
	</div>

	<div class="ui two column centered grid">
		<div class="column">
			<% if flash[:notice] %>
				<div class="ui positive message">
					<i class="close icon"></i>
					<div class="header">
						<%= notice %>
					</div>
				</div>
			<% end %>

			<% if flash[:alert] %>
				<div class="ui error message">
					<i class="close icon"></i>
					<div class="header">
						<%= alert %>
					</div>
				</div>
			<% end %>
		</div>
	</div>

	<%= yield %>

	<%= javascript_include_tag "general", "data-turbolinks-track" => true  %>

</body>
</html>
