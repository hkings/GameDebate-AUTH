<div class="ui four column  grid">
	<% @games.each do |game| %>

		<div class=" column">
			<div class="ui special cards">
				<div class="card">
					<div class="blurring dimmable image">
						<div class="ui dimmer">
							<div class="content">
								<div class="center">
									<%= link_to game_path(game)  do%>
										<div class="ui inverted button">Visit Game</div>
									<% end %>
								</div>
							</div>
						</div>
						<%= image_tag game.image.url(:thumb) %>
					</div>

					<div class="content">
						<a class="header"><%= game.title %></a>
						<div class="meta">
							<span class="date">Created in <%= game.created_at.to_date %></span>
						</div>
					</div>

					<div class="extra content">

						<a>
							<i class="user icon"></i>
							By
							<%= game.user.email %>
						</a>
						<br />
						<a>
							<i class="comments icon"></i>
							<%= game.comments.count %>
							Comments
						</a>

					</div>
				</div>
			</div>
		</div>

	<% end %>

</div>

<% if current_user %>
	<%= link_to new_game_path do %>
		<button class=" large circular inverted green ui icon button fixed-button">
		  <i class="add circle icon"></i>
		</button>
	<% end %>
<% end %>








